<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
	<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
	    android:orientation="vertical" android:baselineAligned="false">
	    <FrameLayout android:layout_width="fill_parent" android:layout_height="0dp"
	        android:id="@android:id/tabcontent" android:layout_weight="1"></FrameLayout>
	    <TabWidget android:layout_width="fill_parent" android:layout_height="wrap_content"
	        android:id="@android:id/tabs" android:layout_gravity="bottom"></TabWidget>
	</LinearLayout>
</TabHost>